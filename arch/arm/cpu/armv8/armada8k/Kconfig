	string
	default "armada8k"

config SYS_VENDOR
	string
	default "mvebu"

config SYS_SOC
	string
	default "armada8k"

config SYS_CONFIG_NAME
	string
	default "armada8k"

config ARMV8_PSCI
	bool
	default y


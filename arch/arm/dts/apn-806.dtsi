/ {

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-a57";
			reg = <0>;
		};
	};

	soc {
		compatible = "marvell,mvebu-apn-806";
		#address-cells = <1>;
		#size-cells = <0>;

		internal-regs {
			compatible = "marvell,internal-regs";
			#address-cells = <1>;
			#size-cells = <1>;
			reg = <0xf0000000 0x4>;

			tclk: tclk {
				compatible = "marvell,tclk";
				#clock-cells = <0>;
				clock-frequency = <125000>;
			};

			spi0: spi@510600 {
				compatible = "marvell,orion-spi";
				reg = <0x510600 0x50>;
				spi-max-frequency = <51200>;
				clock = <&tclk>;
				status = "okay";
			};
		};
	};
};
